<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lifs.infogempa">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/earthquake"
        android:label="@string/app_name"
        android:roundIcon="@drawable/earthquake"
        android:supportsRtl="true"
        android:theme="@style/Theme.InfoGempa">
        <activity
            android:name=".GempaPotensiActivity"
            android:exported="true"
            android:label="@string/app_potensi"/>
        <activity
            android:name=".GempaBiasaActivity"
            android:label="@string/app_biasa"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>